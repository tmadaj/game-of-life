{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": false,
    "isolatedModules": false,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
